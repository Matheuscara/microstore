---
import BaseLayout from "../layouts/BaseLayout.astro";
import { searchProducts } from "../lib/shopify";
import { Image } from "astro:assets";

const q = Astro.url.searchParams.get("q") || "";
const products = q ? await searchProducts(q) : [];
---

<BaseLayout>
    <section class="container mx-auto px-4 py-12">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-text-main">
                {q ? `Resultados para "${q}"` : "Buscar produtos"}
            </h1>
            <p class="text-text-muted mt-2">
                {products.length} produtos encontrados
            </p>
        </div>

        {
            products.length === 0 ? (
                <div class="text-center py-16 bg-surface border border-border/20 rounded-lg">
                    <p class="text-xl text-text-muted mb-4">
                        Nenhum produto encontrado para sua busca.
                    </p>
                    <a
                        href="/"
                        class="text-primary hover:underline font-medium"
                    >
                        Voltar para a loja
                    </a>
                </div>
            ) : (
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    {products.map((product) => (
                        <a href={`/produtos/${product.handle}`} class="group">
                            <div class="aspect-square overflow-hidden rounded-lg bg-gray-100 mb-4 border border-border/10">
                                {product.images.edges[0]?.node.url ? (
                                    <img
                                        src={product.images.edges[0].node.url}
                                        alt={product.title}
                                        class="h-full w-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
                                    />
                                ) : (
                                    <div class="h-full w-full flex items-center justify-center text-text-muted">
                                        Sem imagem
                                    </div>
                                )}
                            </div>
                            <h3 class="text-lg font-medium text-text-main group-hover:text-primary transition-colors">
                                {product.title}
                            </h3>
                            <p class="mt-1 text-sm font-medium text-text-muted">
                                R$ {product.priceRange.minVariantPrice.amount}
                            </p>
                        </a>
                    ))}
                </div>
            )
        }
    </section>
</BaseLayout>
